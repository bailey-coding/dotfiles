# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.{py,bzl}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.{js,ts,vue,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{pl,pm,t}]
indent_style = space
indent_size = 2

[*.{bash,sh,zsh}]
indent_style = space
indent_size = 2

[*Dockerfile*]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{*.{bzl,bazel},BUILD,WORKSPACE}]
indent_style = space
indent_size = 2

# Override for Makefile
[{Makefile, makefile, GNUmakefile}]
indent_style = tab

[Makefile.*]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 2

# terraform fmt uses 2 space indents
[*.tf]
indent_size = 2

